{
    "title": "hero",
    "type": "object",
    
    "not":
    {
        "comment": "This is preload of 'grandchild' dependencies. It is required due to the jsonschema lib issues.",
        "anyOf":
        [
            { "$ref": "file:schemas/definitions/dice.json" },
            { "$ref": "file:schemas/definitions/range.json" },
            { "$ref": "file:schemas/definitions/positive_integer.json" }
        ]
    },
    
    "properties":
    {
        "name":                         { "type": "string" },
        "titleFontSizeScale":           { "type": "number" },
        "rulesFontSizeScale":           { "type": "number" },
        "rulesSeparatorHeight":         { "type": "integer" },
        "behaviourBodyFontSizeScale":   { "type": "number" } ,
        "behaviourHeaderFontSizeScale": { "type": "number" } ,
        "subtitle":                     { "type": [ "string", "null" ] },
        "image":                        { "type": [ "string", "null" ] },
        
        "stats":
        {
            "type": "object",
            "properties":
            {
                "move":     { "$ref": "file:schemas/definitions/positive_integer.json" },
                "save":     { "type": [ "string", "integer" ] },
                "agility":  { "$ref": "file:schemas/definitions/dice.json" }
            },
            "additionalProperties": false,
            "required": [ "move", "save", "agility" ]
        },
        
        "diceSpace":
        {
            "type": [ "array", "string" ],
            "items":
            {
                "type": "object",
                "properties":
                {
                    "count": { "$ref": "file:schemas/definitions/positive_integer.json" },
                    "image": { "type": "string" }
                }
            }
        },
        
        "weapons":
        {
            "type": "array",
            "items": { "$ref": "file:schemas/definitions/adversary_weapon.json" }
        },
        
        "abilities":
        {
            "type": "array",
            "items": { "$ref": "file:schemas/definitions/heroic_ability.json" }
        },
        
        "behaviourTable":
        {
            "type": "object",
            "properties":
            {
                "dices": { "type": "string" },
                "table":
                {
                    "type": "array",
                    "items": { "$ref": "file:schemas/definitions/behaviour.json" },
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "additionalProperties": false,
            "required": [ "table" ]
        }
    },
    "additionalProperties": false,
    "required": [ "name", "stats", "weapons", "behaviourTable" ]
}
{
    "title": "card",
    "type": "object",
    
    "not":
    {
        "comment": "This is preload of 'grandchild' dependencies. It is required due to the jsonschema lib issues.",
        "anyOf":
        [
            { "$ref": "file:schemas/definitions/dice.json" },
            { "$ref": "file:schemas/definitions/range.json" },
            { "$ref": "file:schemas/definitions/positive_integer.json" }
        ]
    },
    
    "properties":
    {
        "name":                 { "type": "string" },
        "subtitle":             { "type": [ "string", "null" ] },
        "description":          { "type": "string" },
        "effect":               { "type": [ "string", "null" ] },
        
        "weapons":
        {
            "type": "array",
            "items": { "$ref": "file:schemas/definitions/heroic_weapon.json" }
        },
        
        "abilities":
        {
            "type": "array",
            "items": { "$ref": "file:schemas/definitions/heroic_ability.json" }
        },
        
        "affects":
        {
            "oneOf":
            [
                { "type": "null" },
                {
                    "type": "array",
                    "items": [ { "type": "string" } ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "additionalEffect": { "type": [ "string", "null" ] },

        "set": { "type": "string" },
        "type": { "type": "string" },
        "copies": { "$ref": "file:schemas/definitions/positive_integer.json" },
        "itemType": { "type": [ "string", "null" ] },
        "categories":
        {
            "oneOf":
            [
                { "type": "null" },
                {
                    "type": "array",
                    "items": [ { "type": "string" } ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        
        "descriptionFontSizeScale": { "type": "number" },
        "categoriesFontSizeScale":  { "type": "number" },
        "rulesFontSizeScale":       { "type": "number" },
        "separatorScale":           { "type": "number" }

    },
    "additionalProperties": false,
    "required": [ "name", "description", "effect", "type", "set" ]
}

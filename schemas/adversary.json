{
    "title": "adversary",
    "type": "object",
    
    "not":
    {
        "comment": "This is preload of 'grandchild' dependencies. It is required due to the jsonschema lib issues.",
        "anyOf":
        [
            { "$ref": "file:schemas/definitions/dice.json" },
            { "$ref": "file:schemas/definitions/range.json" },
            { "$ref": "file:schemas/definitions/positive_integer.json" }
        ]
    },
    
    "definitions":
    {
        "preloads":
        {
            "type": "object",
            "properties": {
                "dice": { "$ref": "file:schemas/definitions/dice.json" },
                "range": { "$ref": "file:schemas/definitions/range.json" },
                "positiveInteger": { "$ref": "file:schemas/definitions/positive_integer.json" }
            }
        },
        "adversaryAbility":
        {
            "title": "adversaryAbility",
            "type": "object",
            "properties":
            {
                "name":         { "type": "string" },
                "right":        { "type": "boolean" },
                "description":  { "type": "string" }
            },
            "additionalProperties": false,
            "required": [ "name", "description" ]
        }
    },
    
    "properties":
    {
        "name":                         { "type": "string" },
        "titleFontSizeScale":           { "type": "number" },
        "rulesFontSizeScale":           { "type": "number" },
        "rulesSeparatorHeight":         { "type": "integer" },
        "behaviourBodyFontSizeScale":   { "type": "number" } ,
        "behaviourHeaderFontSizeScale": { "type": "number" } ,
        "description":                  { "type": "string" },
        "descriptionFontSizeScale":     { "type": "number" },
        "image":                        { "type": [ "string", "null" ] },
        
        "stats":
        {
            "type": "object",
            "properties":
            {
                "move":     { "$ref": "file:schemas/definitions/positive_integer.json" },
                "vigour":   { "$ref": "file:schemas/definitions/positive_integer.json" },
                "agility":  { "$ref": "file:schemas/definitions/dice.json" }
            },
            "additionalProperties": false,
            "required": [ "move", "vigour", "agility" ]
        },
        
        "weapons":
        {
            "type": "array",
            "items": { "$ref": "file:schemas/definitions/adversary_weapon.json" }
        },
        
        "abilities":
        {
            "type": "array",
            "items": { "$ref": "#/definitions/adversaryAbility" }
        },
        
        "difficultyBonuses":
        {
            "type": "array",
            "items": { "$ref": "#/definitions/adversaryAbility" }
        },

        "behaviourTable":
        {
            "type": "object",
            "properties":
            {
                "dices": { "type": "string" },
                "table":
                {
                    "type": "array",
                    "items": { "#ref": "file:schemas/definitions/behaviour.json" },
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "additionalProperties": false,
            "required": [ "table" ]
        }
    },
    "additionalProperties": false,
    "required": [ "name", "stats", "behaviourTable" ]
}
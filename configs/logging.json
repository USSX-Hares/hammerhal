{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple_console":
        { "format": "%(levelname)s: %(message)s"}
        ,
        "simple_log":
        { "format": "%(asctime)-15s \t [ %(name)-60s -> %(module)-25s -> %(funcName)-30s ] [ %(levelname)-8s ] \t | %(message)s" }

    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple_console",
            "stream": "ext://sys.stdout"
        }
        ,
        "text_drawer_handler":
        {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple_log",
            "filename": "logs/text-drawer.log",
            "maxBytes": 5242880,
            "backupCount": 20,
            "encoding": "utf8"
        }
        ,
        "hammerhal_handler":
        {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple_log",
            "filename": "logs/hammerhal.log",
            "maxBytes": 5242880,
            "backupCount": 20,
            "encoding": "utf8"
        }
        ,
        "info_handler":
        {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple_log",
            "filename": "logs/info.log",
            "maxBytes": 5242880,
            "backupCount": 20,
            "encoding": "utf8"
        }
        ,
        "error_handler":
        {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple_log",
            "filename": "logs/errors.log",
            "maxBytes": 5242880,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers":
    {
        "hammerhal":
        {
            "level": "DEBUG",
            "handlers": [ "hammerhal_handler" ],
            "propagate": "no"
        }
        ,
        "text_drawer":
        {
            "level": "DEBUG",
            "handlers": [ "text_drawer_handler" ],
            "propagate": "no"
        }
    },

    "root":
    {
        "level": "INFO",
        "handlers": ["console", "info_handler", "error_handler"]
    }
}